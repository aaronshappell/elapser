{
  "name": "elapser",
  "description": "A cross-platform timelapse application",
  "version": "0.1.3",
  "license": "MIT",
  "author": "Aaron Shappell <aaronshappell@gmail.com>",
  "homepage": "https://github.com/aaronshappell/elapser",
  "bugs": {
    "url": "https://github.com/aaronshappell/elapser/issues",
    "email": "aaronshappell@gmail.com"
  },
  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "electron": "electron .",
    "electron-build": "ng build --prod && electron .",
    "dist": "build --dir -p never",
    "dist-publish": "build -p always"
  },
  "build": {
    "appId": "org.aaronshappell.elapser",
    "productName": "Elapser",
    "copyright": "Copyright Â© 2017 Aaron Shappell",
    "files": [
      "**/*",
      "bin/*",
      "build/elapser/*",
      "!*.ts",
      "!e2e/",
      "!**/node_modules",
      "!src/",
      "!angular.json",
      "!LICENSE",
      "!package.json",
      "!README.md",
      "!tsconfig.json",
      "!tslint.json",
      "!webpack.config.js"
    ],
    "publish": {
      "provider": "github"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.1.0",
    "@angular/cdk": "^6.4.7",
    "@angular/common": "^6.1.0",
    "@angular/compiler": "^6.1.0",
    "@angular/core": "^6.1.0",
    "@angular/forms": "^6.1.0",
    "@angular/http": "^6.1.0",
    "@angular/material": "^6.4.7",
    "@angular/platform-browser": "^6.1.0",
    "@angular/platform-browser-dynamic": "^6.1.0",
    "@angular/router": "^6.1.0",
    "core-js": "^2.5.4",
    "electron-updater": "^3.1.2",
    "ffmpeg-static": "^2.3.0",
    "fluent-ffmpeg": "^2.1.2",
    "hammerjs": "^2.0.8",
    "rxjs": "~6.2.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "^2.4.0",
    "@angular-devkit/build-angular": "~0.8.0",
    "@angular/cli": "~6.2.1",
    "@angular/compiler-cli": "^6.1.0",
    "@angular/language-service": "^6.1.0",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.3.0",
    "electron": "^2.0.8",
    "electron-builder": "^20.28.4",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~3.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.4.0",
    "ts-node": "~7.0.0",
    "tslint": "~5.11.0",
    "typescript": "~2.9.2"
  }
}
